<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <EditText
        android:id="@+id/txtMeasurementName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:text="@string/txtMeasurementName_textPlaceholder"/>
    <ImageButton
        android:id="@+id/btnMeasurementStartStop"
        android:src="@drawable/ic_play_circle_outline_black_32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/btnMeasurementReset"
        android:src="@drawable/ic_replay_black_32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <nl.bittrail.idlogitimer.CustomChronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageButton
        android:id="@+id/btnMeasurementDelete"
        android:src="@drawable/ic_delete_forever_black_32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
